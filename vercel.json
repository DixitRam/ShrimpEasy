{
  "builds": [
    {
      "src": "shrimp/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxDuration": 10,  // Increase the maxDuration if needed
        "memory": 1024      // Adjust memory allocation based on app needs
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(static|media)/(.*)",
      "dest": "/static/$1/$2",
      "headers": {
        "Cache-Control": "max-age=31536000"  // Cache static files for a year
      }
    },
    {
      "src": "/(.*)",
      "dest": "shrimp/wsgi.py"
    }
  ]
}
